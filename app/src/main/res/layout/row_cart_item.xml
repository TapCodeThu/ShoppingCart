<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:layout_weight="1"
            android:src="@drawable/image_no_available"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Name"
                android:id="@+id/tv_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Gia: 200 000 VND"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20sp"
                android:textSize="20sp"
                android:id="@+id/tv_price"
                android:textColor="@color/red_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginHorizontal="20dp"
                android:id="@+id/btnMinus"
                android:src="@drawable/baseline_indeterminate_check_box_24"
                android:layout_below="@id/tv_price"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="1"
                android:layout_below="@id/tv_price"
                android:layout_toEndOf="@id/btnMinus"
                android:layout_marginTop="30dp"
                android:textSize="18sp"
                android:textColor="@color/bottomTabInActive"
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/baseline_add_box_24"
                android:layout_below="@id/tv_price"
                android:layout_toEndOf="@id/tv_quantity"
                android:id="@+id/btnPlus"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/baseline_close_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>